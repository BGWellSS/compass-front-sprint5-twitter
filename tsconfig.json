{
  "compilerOptions": {
    "outDir": "app/dist/js",
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["app/src/js/**/*"]
}
